doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Ganadores
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body
        div
            -var contador = 0
            h1 FELICITACIONES GANASTE EL JUEGO
            hr
            hr
            div(class="card")
                div(class="card-body")
                    each apuesta in apuestas
                        -contador = contador + 1
                        hr
                        h2 Resultado del juego No. #{contador}
                        //- p con id: #{apuesta._id}
                        each win, index in winner
                            if (contador === index + 1)
                                p(class="card-text") Nombre Ganador: #{win.name}
                                p(class="card-text") ID Ganador: #{win.id}
                        h3  Ganaste la cantidad de #{apuesta.type}
                            div(class="card-body")
                        hr
                hr
                hr
                a(href="/startGame"): button() Volver  
