doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Consulta game
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body
        -const games = infopug
        -var idGames = id
        -var contador = 0
        div
            table(class="table table-striped")
                thead(class="thead-dark")
                    tr
                        th(scope="col") No.
                        th(scope="col") ID
                        th(scope="col") Tipo de Apuesta
                        th(scope="col") Gamers
                        th(scope="col") Juego iniciado
                        th(scope="col") Acciones
                tbody#data
                    each game in games
                        -var players = game.gamers
                        -contador = contador + 1
                        tr  
                            td #{contador}
                            td #{game._id}
                            td #{game.type}
                            td: table(class="table" )
                               each player in players
                                    td #{player.name}
                            td #{game.inProgress}
                            td: each idGame, index in idGames
                                if (contador == index+1)
                                    a(href="start/" + idGame): button Comenzar juego
            a(href="/startGame"): button() Volver                         